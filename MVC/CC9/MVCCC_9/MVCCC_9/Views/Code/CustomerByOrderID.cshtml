@model MVCCC_9.Models.Customer

<h2>Customer Details for Order ID 10248</h2>

@if (Model != null)
{
    <ul>
        <li><strong>Customer ID:</strong> @Model.CustomerID</li>
        <li><strong>Company Name:</strong> @Model.CompanyName</li>
        <li><strong>Contact Name:</strong> @Model.ContactName</li>
