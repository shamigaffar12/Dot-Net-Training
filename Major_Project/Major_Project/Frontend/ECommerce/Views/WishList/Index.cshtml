@model List<ECommerce.DTO.WhishlistDTO>

@{
    ViewBag.Title = "My Wishlist";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body {
        background-color: #121212; /* dark theme */
        color: #f1f1f1;
        font-family: 'Segoe UI', sans-serif;
    }

    h2 {
        font-weight: 700;
        margin: 20px 0;
        color: #FFD700; /* gold heading */
        text-align: center;
    }

    .card {
        border: none;
        border-radius: 15px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        background-color: #1c1c1c;
        color: #ffffff; /* text inside card is white */
        text-align: center;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(255, 215, 0, 0.5); /* glowing gold shadow */
        }

        .card img {
            width: 100%;
            height: 220px;
            object-fit: contain;
            background-color: #fff;
            padding: 10px;
            border-radius: 10px;
        }

    .card-body h5 {
        font-weight: 700;
        font-size: 18px;
        margin: 10px 0;
        color: #FFD700; /* gold product name */
    }

    .card-body p {
        margin: 5px 0;
        color: #ffffff; /* white for normal text */
    }

        .card-body p.fw-bold {
            color: #FFD700; /* gold for price to stand out */
            font-size: 16px;
            font-weight: 700;
        }

        .card-body p.text-muted {
            color: #f1f1f1; /* white for added date */
            font-size: 14px;
        }

    .btn-danger {
        background-color: #b22222; /* deep red */
        border: none;
        border-radius: 25px;
        padding: 8px 20px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-danger:hover {
            background-color: #ff4500; /* bright red hover */
            color: #fff;
        }

    .alert-info {
        background-color: #2a2a2a;
        border: 1px solid #FFD700;
        color: #FFD700;
        padding: 20px;
        border-radius: 10px;
        text-align: center;
        font-size: 18px;
        margin-top: 30px;
    }
</style>


<div class="container mt-4">
    <h2>My Wishlist</h2>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 col-sm-6 mb-4">
                    <div class="card shadow-sm">
                        <img src="@(string.IsNullOrEmpty(item.ProductImageURL) ? Url.Content("~/Images/no-image.png") : item.ProductImageURL)"
                             alt="@item.ProductName" class="img-fluid" />

                        <div class="card-body text-center">
                            <h5>@item.ProductName</h5>
                            <p class="fw-bold">₹@item.ProductPrice</p>
                            <p class="text-muted">Added on: @(item.AddedAt.HasValue ? item.AddedAt.Value.ToString("dd-MMM-yyyy") : "N/A")</p>

                            <a href="@Url.Action("Remove", "Wishlist", new { Id = item.WishlistID })"
                               class="btn btn-danger mt-2">
                                 Remove
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            Your wishlist is empty.
        </div>
    }
</div>
