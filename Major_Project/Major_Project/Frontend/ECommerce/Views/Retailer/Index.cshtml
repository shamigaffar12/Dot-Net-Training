@model List<ECommerce.Models.RetailerFunction>

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #1A1A1A;
        }

        /* Navbar */
        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #000000;
            color: white;
            padding: 15px 30px;
        }

            .navbar .logo {
                display: flex;
                align-items: center;
            }

                .navbar .logo img {
                    height: 40px;
                    margin-right: 10px;
                }

            .navbar .greeting {
                font-size: 18px;
                font-weight: 500;
            }

            .navbar .logout {
                display: flex;
                align-items: center;
                gap: 15px;
            }

                .navbar .logout a {
                    color: white;
                    text-decoration: none;
                    background-color: #e74c3c;
                    padding: 8px 16px;
                    border-radius: 5px;
                    transition: background-color 0.3s ease;
                }

                    .navbar .logout a:hover {
                        background-color: #c0392b;
                    }

        /* Card styles */
        .card-container {
            padding: 40px;
            display: flex;
            flex-direction: column;
            gap: 30px;
            align-items: center;
        }

        .card {
            background-color: #D4AF37;
            color: black;
            padding: 30px;
            text-align: center;
            border-radius: 10px;
            width: 60%;
            transition: box-shadow 0.4s ease, transform 0.3s ease;
            cursor: pointer;
            position: relative;
        }

            .card:hover {
                box-shadow: 0 0 10px rgba(212, 175, 55, 0.6), 0 0 20px rgba(212, 175, 55, 0.4);
                transform: translateY(-2px);
            }
    </style>
</head>
<body>

    <!-- Navbar -->
    <div class="navbar">
        <div class="logo">
            <img src="~/Content/logo1..jpg" alt="Logo" />
            <div class="greeting">FlipNShop</div>
        </div>
        <div class="logout">
            <div class="greeting">Hello @Session["Username"]</div>
            <a href="@Url.Action("Logout", "Account")">Logout</a>
        </div>
    </div>

    <!-- Retailer Functions -->
    <div class="card-container">
        @foreach (var function in Model)
        {
            <div class="card" onclick="location.href='@function.ActionUrl'">
                <h3>@function.Name</h3>
            </div>
        }
    </div>

</body>
</html>