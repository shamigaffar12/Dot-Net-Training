
@model ECommerce.Models.RetailerViewModel

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-color: #1A1A1A;
            color: #D4AF37;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 40px;
        }

        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #000;
            color: #D4AF37;
            padding: 15px 30px;
            margin-bottom: 40px;
        }

            .navbar .logo {
                display: flex;
                align-items: center;
            }

                .navbar .logo img {
                    height: 40px;
                    margin-right: 15px;
                }

            .navbar .greeting {
                font-size: 18px;
                font-weight: 500;
            }

            .navbar .logout a {
                color: #E0E0E0;
                text-decoration: none;
                background-color: #e74c3c;
                padding: 8px 16px;
                border-radius: 5px;
                transition: background-color 0.3s ease;
            }

                .navbar .logout a:hover {
                    background-color: #c0392b;
                }

        .details-box {
            background-color: #000;
            padding: 30px;
            border-radius: 10px;
            width: 50%;
            margin: auto;
            box-shadow: 0 0 10px rgba(212, 175, 55, 0.5);
        }

            .details-box h2 {
                text-align: center;
                margin-bottom: 30px;
            }

            .details-box p {
                font-size: 18px;
                margin: 10px 0;
            }

        .back-link {
            display: block;
            text-align: center;
            margin-top: 30px;
            color: #e0e0e0;
            text-decoration: none;
            background-color: #444;
            padding: 10px 20px;
            border-radius: 5px;
        }

            .back-link:hover {
                background-color: #666;
            }
    </style>
</head>
<body>

    <!-- Navbar -->
    <div class="navbar">
        <div class="logo">
            <img src="~/Content/logo1..jpg" alt="Logo" />
            <div class="greeting">FlipNShop</div>
        </div>

        <div class="logout" style="display: flex; align-items: center; gap: 15px;">
            <div class="greeting">Hello @Session["Username"]</div>
            <a href="@Url.Action("Logout", "Account")">Logout</a>
        </div>
    </div>

    <!-- Retailer Details -->
    <div class="details-box">
        <h2>Retailer Details</h2>
        <p><strong>RetailerId:</strong> @Model.RetailerId</p>
        <p><strong>Username:</strong> @Model.Username</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Address:</strong> @Model.Address</p>
        <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
        <a class="back-link" href="@Url.Action("ManageRetailers", "Admin")">← Back to Retailer List</a>
    </div>

</body>
</html>
