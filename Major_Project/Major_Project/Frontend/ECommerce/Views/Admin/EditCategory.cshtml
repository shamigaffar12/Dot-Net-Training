@model ECommerce.Models.Category
@{
    ViewBag.Title = "EditCategory";
}

<h2>EditCategory</h2>



<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            margin: 0;
            background-color: #1A1A1A;
            color: #fff;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #000;
            color: #D4AF37;
            padding: 15px 30px;
        }

            .navbar .logo {
                display: flex;
                align-items: center;
            }

                .navbar .logo img {
                    height: 40px;
                    margin-right: 15px;
                }

            .navbar .greeting {
                font-size: 18px;
                font-weight: 500;
            }

            .navbar .logout a {
                color: #E0E0E0;
                text-decoration: none;
                background-color: #e74c3c;
                padding: 8px 16px;
                border-radius: 5px;
                transition: background-color 0.3s ease;
            }

                .navbar .logout a:hover {
                    background-color: #c0392b;
                }

        h2 {
            text-align: center;
            color: #D4AF37;
            margin-top: 30px;
        }

        .form-container {
            width: 50%;
            margin: 40px auto;
            background-color: #000;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(212, 175, 55, 0.5);
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            color: #D4AF37;
            font-weight: 500;
        }

        input[type="text"] {
            width: 100%;
            padding: 10px;
            border-radius: 5px;
            border: none;
            background-color: #1A1A1A;
            color: #fff;
        }

        .btn-primary {
            background-color: #D4AF37;
            color: black;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .btn-primary:hover {
                background-color: #bfa133;
            }
    </style>
</head>
<body>

    <div class="navbar">
        <div class="logo">
            <img src="~/Content/logo1..jpg" alt="Logo" />
            <div class="greeting">FlipNShop</div>
        </div>
        <div class="logout" style="display: flex; align-items: center; gap: 15px;">
            <div class="greeting">Hello @Session["Username"]</div>
            <a href="@Url.Action("Logout", "Account")">Logout</a>
        </div>
    </div>

    <h2>Edit Category</h2>

    <div class="form-container">
        @using (Html.BeginForm("EditCategory", "Admin", FormMethod.Post))
        {
            @Html.HiddenFor(m => m.CategoryID)

            <div class="form-group">
                <label>Category Name</label>
                @Html.TextBoxFor(m => m.CategoryName)
                @Html.ValidationMessageFor(m => m.CategoryName)
            </div>

            <button type="submit" class="btn-primary">Update Category</button>}
    </div>

</body>
</html>