@model List<ECommerce.Models.OrderDetailViewModel>

@if (TempData["AlertMessage"] != null)

{
<script>

        alert('@TempData["AlertMessage"]');
</script>}

<!DOCTYPE html>
<html>
<head>
    <style>

        body {
            margin: 0;
            background-color: #1A1A1A;
            color: #fff;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #000;
            color: #D4AF37;
            padding: 15px 30px;
        }

            .navbar .logo {
                display: flex;
                align-items: center;
            }

                .navbar .logo img {
                    height: 40px;
                    margin-right: 15px;
                }

            .navbar .greeting {
                font-size: 18px;
                font-weight: 500;
            }

            .navbar .logout a {
                color: #E0E0E0;
                text-decoration: none;
                background-color: #e74c3c;
                padding: 8px 16px;
                border-radius: 5px;
                transition: background-color 0.3s ease;
            }

                .navbar .logout a:hover {
                    background-color: #c0392b;
                }

        h2 {
            text-align: center;
            color: #D4AF37;
            margin-top: 30px;
        }

        .search-form {
            text-align: center;
            margin: 20px 0;
        }

            .search-form input[type="text"],
            .search-form input[type="date"] {
                padding: 10px;
                width: 200px;
                border-radius: 5px;
                border: none;
                margin-right: 10px;
            }

            .search-form button {
                padding: 10px 20px;
                background-color: #D4AF37;
                border: none;
                border-radius: 5px;
                cursor: pointer;
                color: black;
            }

                .search-form button:hover {
                    background-color: #bfa133;
                }

        table {
            width: 90%;
            margin: 30px auto;
            border-collapse: collapse;
            background-color: #000;
            color: #D4AF37;
        }

        th, td {
            padding: 15px;
            border: 1px solid #D4AF37;
            text-align: center;
        }

        th {
            background-color: #222;
        }

        .pagination {
            display: flex;
            justify-content: center;
            margin-bottom: 40px;
            list-style: none;
            padding: 0;
        }

            .pagination .page-item {
                margin: 0 5px;
            }

            .pagination .page-link {
                padding: 8px 12px;
                background-color: #D4AF37;
                color: black;
                text-decoration: none;
                border-radius: 5px;
            }

            .pagination .active .page-link {
                background-color: #bfa133;
            }
    </style>
</head>
<body>

    <!-- Navbar -->
    <div class="navbar">
        <div class="logo">
            <img src="~/Content/logo1..jpg" alt="Logo" />
            <div class="greeting">FlipNShop </div>
        </div>

        <div class="logout" style="display: flex; align-items: center; gap: 15px;">
            <div class="greeting">Hello @Session["Username"]</div>
            <a href="@Url.Action("Logout", "Account")">Logout</a>
        </div>
    </div>

    <h2>Order Details</h2>

    <!-- Filter Form -->
    <div class="search-form">
        <form method="get">
            <input type="text" name="searchUser" value="@ViewBag.SearchUser" placeholder="Search by Username" />

            <label style="margin-right: 5px; color: #D4AF37;">From Date:</label>
            <input type="date" name="fromDate" value="@ViewBag.FromDate" />

            <label style="margin-left: 15px; margin-right: 5px; color: #D4AF37;">To Date:</label>
            <input type="date" name="toDate" value="@ViewBag.ToDate" />

            <button type="submit">Filter</button>
        </form>
    </div>

    <!-- Orders Table -->
    <table>
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Username</th>
                <th>Product ID</th>
                <th>Product Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total Amount</th>
                <th>Order Date</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)

            {
<tr>
    <td>@item.OrderID</td>
    <td>@item.Username</td>
    <td>@item.ProductID</td>
    <td>@item.ProductName</td>
    <td>@item.Quantity</td>
    <td>@String.Format("{0:C}", item.PriceAtPurchase)</td>
    <td>@String.Format("{0:C}", item.TotalAmount)</td>
    <td>@item.OrderDate</td>
</tr>}
        </tbody>
    </table>

    <!-- Pagination -->
    <nav>
        <ul class="pagination">

            @for (int i = 1; i <= ViewBag.TotalPages; i++)

            {
<li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
    <a class="page-link" href="@Url.Action("ViewOrders", new { page = i, searchUser = ViewBag.SearchUser, fromDate = ViewBag.FromDate, toDate = ViewBag.ToDate })">@i</a>
</li>}
        </ul>
    </nav>

</body>
</html>

