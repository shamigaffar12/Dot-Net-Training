@model IEnumerable<ECommerce.Models.Retailer>
@{ ViewBag.Title = "Manage Retailers"; }
<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            margin: 0;
            background-color: #1A1A1A;
            color: #fff;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #000;
            color: #D4AF37;
            padding: 15px 30px;
        }

            .navbar .logo {
                display: flex;
                align-items: center;
            }

                .navbar .logo img {
                    height: 40px;
                    margin-right: 15px;
                }

            .navbar .greeting {
                font-size: 18px;
                font-weight: 500;
            }

            .navbar .logout a {
                color: #E0E0E0;
                text-decoration: none;
                background-color: #e74c3c;
                padding: 8px 16px;
                border-radius: 5px;
                transition: background-color 0.3s ease;
            }

                .navbar .logout a:hover {
                    background-color: #c0392b;
                }

        h2 {
            text-align: center;
            color: #D4AF37;
            margin-top: 30px;
        }

        .search-form {
            text-align: center;
            margin: 20px 0;
        }

            .search-form input[type="text"],
            .search-form select {
                padding: 10px;
                border-radius: 5px;
                border: none;
                margin-right: 10px;
                width: 250px;
            }

            .search-form button {
                padding: 10px 20px;
                background-color: #D4AF37;
                border: none;
                border-radius: 5px;
                cursor: pointer;
                color: black;
            }

                .search-form button:hover {
                    background-color: #bfa133;
                }

        table {
            width: 90%;
            margin: 30px auto;
            border-collapse: collapse;
            background-color: #000;
            color: #D4AF37;
        }

        th, td {
            padding: 15px;
            border: 1px solid #D4AF37;
            text-align: center;
        }

        th {
            background-color: #222;
        }

        .action-links a,
        .action-links button {
            margin-right: 10px;
            text-decoration: none;
            padding: 8px 12px;
            border-radius: 5px;
            font-size: 14px;
            cursor: pointer;
        }

        .btn-view {
            background-color: #3498db;
            color: white;
        }

        .btn-edit {
            background-color: #f39c12;
            color: white;
        }

        .btn-delete {
            background-color: #e74c3c;
            color: white;
            border: none;
        }

        .btn-toggle {
            background-color: #D4AF37;
            color: black;
            border: none;
        }

            .btn-toggle.disapprove {
                background-color: #c0392b;
                color: white;
            }

            .btn-toggle:hover,
            .btn-delete:hover,
            .btn-edit:hover,
            .btn-view:hover {
                opacity: 0.85;
            }
    </style>
</head>
<body>

    <!-- Navbar -->
    <div class="navbar">
        <div class="logo">
            <img src="~/Content/logo1..jpg" alt="Logo" />
            <div class="greeting">FlipNShop </div>
        </div>

        <div class="logout" style="display: flex; align-items: center; gap: 15px;">
            <div class="greeting">Hello @Session["Username"]</div>
            <a href="@Url.Action("Logout", "Account")">Logout</a>
        </div>
    </div>

    <h2>Manage Retailers</h2>

    <!-- Search and Filter -->
    <div class="search-form">
        @using (Html.BeginForm("ManageRetailers", "Admin", FormMethod.Post))
        {
<input type="text" name="searchTerm" placeholder="Search by name or email" />
                <select name="approvalFilter">
                    <option value="">All</option>
                    <option value="Approved">Approved</option>
                    <option value="NotApproved">Not Approved</option>
                </select>
                                <button type="submit">Search</button>}
    </div>

    <!-- Retailer Table -->
    <table>
        <thead>
            <tr>
                <th>Retailer Name</th>
                <th>Email</th>
                <th>Contact</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
<tr>
    <td>@item.Username</td>
    <td>@item.Email</td>
    <td>@item.PhoneNumber</td>
    <td>@(item.IsApproved ? "Approved" : "Not Approved")</td>
    <td class="action-links" style="display: flex; justify-content: center; align-items: center;">
        <a href="@Url.Action("ViewRetailerDetails", "Admin", new { id = item.RetailerId })" class="btn-view">View</a>
        @using (Html.BeginForm("ToggleRetailerApproval", "Admin", FormMethod.Post, new { @style = "display:inline;" }))
        {
@Html.Hidden("id", item.RetailerId)
                    <button type="submit" class="btn-toggle @(item.IsApproved ? "disapprove" : "")">
                        @(item.IsApproved ? "Disapprove" : "Approve")
                    </button>}
    </td>
</tr>            }
        </tbody>
    </table>

</body>
</html>